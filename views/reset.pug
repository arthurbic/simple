extends layout
block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Reset your password
        p.lean Create a new password.
        form(method='POST' action='/reset')
          div.form-group
            label(for='password') New password
            input.form-control(type='password' id='password' placeholder='new password' name='password')
          div.form-group
            label(for='confirmation')  Confirm password
            input.form-control(type='password' id='confirmation' placeholder='confirm new password' name='confirmPassword')
          div.form-group
            input(type='hidden' , name='token' , value=token)
          div.button-group
            button.btn.btn-primary(type='submit') Reset password
    script(src='http://code.jquery.com/jquery-1.11.0.min.js', type='text/javascript', charset='utf-8')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")